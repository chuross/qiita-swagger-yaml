{
  "name": "qiita-swagger-yaml",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "install": "[ -f ./bin/swagger-codegen-cli-$npm_package_config_swagger_version.jar ] || (npm run clean:bin && wget http://central.maven.org/maven2/io/swagger/swagger-codegen-cli/$npm_package_config_swagger_version/swagger-codegen-cli-$npm_package_config_swagger_version.jar -O ./bin/swagger-codegen-cli-$npm_package_config_swagger_version.jar)",
    "init": "swaglow init -o swagger",
    "sync:version": "node bin/version.js",
    "build:yaml": "npm run sync:version && swaglow build -i swagger -o output && swagger-tools validate output/swagger.yml",
    "build:code": "java -jar ./bin/swagger-codegen-cli-$npm_package_config_swagger_version.jar generate -i output/swagger.yml -o output/code -l ",
    "build:java": "npm-run-all -s build:yaml clean:code \"build:code -- java\"",
    "build:swift": "npm-run-all -s build:yaml clean:code \"build:code -- swift3 -c config.swift.json\"",
    "clean:bin": "rm -rf bin && mkdir bin",
    "clean:code": "rm -rf output/code && mkdir output/code",
    "publish:swift": "npm run build:swift && cd output/code && sh git_push.sh chuross qiita-api-client"
  },
  "config": {
    "swagger_version": "2.2.3"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "swaglow": "^1.0.4"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.1",
    "swagger-tools": "^0.10.1"
  }
}
